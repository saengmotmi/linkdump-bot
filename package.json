{
  "name": "linkdump-bot",
  "version": "2.0.0",
  "description": "완전 무료 Cloudflare Workers AI 기반 링크 공유 봇",
  "type": "module",
  "main": "workers/app.js",
  "scripts": {
    "dev": "tsx --watch workers/app.ts",
    "start": "tsx workers/app.ts",
    "demo": "tsx quick-test.ts",
    "test": "tsx test/*.ts",
    "check:types": "tsc --noEmit",
    "build": "tsc",
    "lint": "eslint . --ext .ts,.js",
    "deploy": "chmod +x scripts/deploy.sh && ./scripts/deploy.sh",
    "deploy:test": "chmod +x scripts/post-deploy-test.sh && ./scripts/post-deploy-test.sh",
    "deploy:quick": "cd workers && wrangler deploy",
    "health": "chmod +x scripts/health-check.sh && ./scripts/health-check.sh",
    "rollback": "chmod +x scripts/rollback.sh && ./scripts/rollback.sh",
    "rollback:previous": "chmod +x scripts/rollback.sh && ./scripts/rollback.sh --previous",
    "deployments": "cd workers && wrangler deployments list"
  },
  "packageManager": "yarn@4.0.0",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250525.0",
    "@types/node": "^22.15.21",
    "@vitest/coverage-v8": "^1.0.0",
    "discord-api-types": "^0.38.8",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vitest": "^1.0.0"
  },
  "keywords": [
    "discord",
    "bot",
    "automation",
    "links",
    "cloudflare",
    "workers-ai",
    "무료",
    "dependency-injection",
    "interface-based"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "reflect-metadata": "^0.2.2",
    "tsyringe": "^4.10.0"
  }
}
